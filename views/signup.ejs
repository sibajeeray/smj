<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <%- include('./includes/navbar.ejs') %>
    <div class="contents adminblock">
        <div class="container page-height">
            <h3 class="msg">Please provide us with your details below</h3>
            <div class="container admindata">
                <div class="row">
                    <div class="col-md-7 login-image">

                    </div>
                    <div class="col-md-5">
                            <% if (errorMessage) { %>
                                <div class="user-message user-message--error"><%= errorMessage %></div>
                            <% } %>
                        <div class="form-container">
                            <form action="/register" method="POST">
                                <div class="field">
                                    <label for="userid"> Enter your Email (Please Enter your ANZ email address)</label>
                                    <input type="email" name="email" id="mail" required >
                                </div>
                                <div class="field">
                                        <label for="userid">Enter your Password</label>
                                        <input type="password" name="password" id="pwd" required >
                                </div>
                                <div class="field">
                                    <label for="userid"> Confirm Password</label>
                                    <input type="password" name="confirmpassword" id="pwd" required >
                                </div>
                                <div class="button text-center">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="submit" value="Signup">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="login">
                    <p class="account">You have an account already? Please sign in below.</p>
                    <a href="/login">Login</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('./includes/end.ejs') %>